*VT100.foreground: white
*VT100.background: black
*VT100.savelines: 4000

XTerm*bellIsUrgent: true 

mutt*Translations:    #override               <Key>BackSpace: string(0x7F)

URxvt*saveLines: 4000
URxvt*depth: 32
URxvt*color12: rgba:0000/cccc/ffff/eeee
URxvt*scrollBar: false
URxvt*urgentOnBell: true
URxvt*loginShell: true

URxvt.perl-ext:      default,url-select
URxvt.keysym.M-u:    perl:url-select:select_next
URxvt.url-select.launcher:   /usr/bin/firefox
URxvt.url-select.underline: false

URxvt.iso14755: false
URxvt.iso14755_52: false


URxvt*font: xft:DejaVuSansMono:pixelsize=11
URxvt*boldFont: xft:DejaVuSansMono:bold:pixelsize=11
URxvt*italicFont: xft:DejaVuSansMono:italic:autohint=true:pixelsize=11
URxvt*boldItalicFont: xft:DejaVuSansMono:bold:italic:autohint=true:pixelsize=11


! Bind C-0, C-+ and C-= to activate medium, big and small font size respectively.
URxvt.keysym.C-1:     command:\033]710;xft:DejaVuSansMono:size=6\007
URxvt.keysym.C-2:     command:\033]710;xft:DejaVuSansMono:size=8\007
URxvt.keysym.C-3:     command:\033]710;xft:DejaVuSansMono:size=10\007
URxvt.keysym.C-4:     command:\033]710;xft:DejaVuSansMono:size=11\007
URxvt.keysym.C-5:     command:\033]710;xft:DejaVuSansMono:size=14\007
URxvt.keysym.C-6:     command:\033]710;xft:DejaVuSansMono:size=16\007
URxvt.keysym.C-7:     command:\033]710;xft:DejaVuSansMono:size=20\007
URxvt.keysym.C-8:     command:\033]710;xft:DejaVuSansMono:size=24\007
URxvt.keysym.C-9:     command:\033]710;xft:DejaVuSansMono:size=30\007
! URxvt.keysym.C-0:     command:\033]710;xft:DejaVuSansMono:size=16\007
! URxvt.keysym.C-minus: command:\033]710;xft:DejaVuSansMono:size=14\007
! URxvt.keysym.C-equal: command:\033]710;xft:DejaVuSansMono:size=11\007

URxvt.keysym.C-minus: command:\033]11;rgba:0000/0000/0000/eeee\007\033]10;rgba:ffff/ffff/ffff/ffff\007
URxvt.keysym.C-equal: command:\033]11;rgba:ffff/ffff/ffff/ffff\007\033]10;rgba:0000/0000/0000/eeee\007

! change to light background
! URxvt.keysym.C-1: command:\033]11;rgba:0000/0000/0000/eeee\007\033]10;rgba:ffff/ffff/ffff/ffff\007

! change to dark gray background
! URxvt.keysym.C-2: command:\033]11;rgba:ffff/ffff/ffff/ffff\007\033]10;rgba:0000/0000/0000/eeee\007

! xfig always special fonts
Fig.latexfonts: true 
Fig.specialtext: true

xclock*background: #222222
! xclock*background: #DDDDDD

Xcursor.size: 16