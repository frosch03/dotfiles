*VT100.foreground: white
*VT100.background: black
*VT100.savelines: 4000

XTerm*bellIsUrgent: true 

mutt*Translations:    #override               <Key>BackSpace: string(0x7F)

URxvt*saveLines: 4000
URxvt*depth: 32
URxvt*color12: rgba:0000/cccc/ffff/eeee
URxvt*scrollBar: false
URxvt*urgentOnBell: true
! URxvt*font: xft:mono:medium:size=10
URxvt*font: xft:Inconsolata:medium:size=11
URxvt*loginShell: true

URxvt.perl-ext:      default,url-select
URxvt.keysym.M-u:    perl:url-select:select_next
URxvt.url-select.launcher:   /usr/bin/firefox
URxvt.url-select.underline: false

URxvt.iso14755: false
URxvt.iso14755_52: false

! Bind C-0, C-+ and C-= to activate medium, big and small font size respectively.
URxvt.keysym.C-7:     command:\033]710;xft:Inconsolata:size=30\007
URxvt.keysym.C-8:     command:\033]710;xft:Inconsolata:size=24\007
URxvt.keysym.C-9:     command:\033]710;xft:Inconsolata:size=20\007
URxvt.keysym.C-0:     command:\033]710;xft:Inconsolata:size=16\007
URxvt.keysym.C-minus: command:\033]710;xft:Inconsolata:size=14\007
URxvt.keysym.C-equal: command:\033]710;xft:Inconsolata:size=11\007

! change to light background
URxvt.keysym.C-1: command:\033]11;rgba:0000/0000/0000/eeee\007\033]10;rgba:ffff/ffff/ffff/ffff\007

! change to dark gray background
URxvt.keysym.C-2: command:\033]11;rgba:ffff/ffff/ffff/ffff\007\033]10;rgba:0000/0000/0000/eeee\007

! xfig always special fonts
Fig.latexfonts: true 
Fig.specialtext: true
